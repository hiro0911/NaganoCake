<div class="container">
	<div class="row">
		<div class="col-xs-6">
			<h3>ジャンル一覧・追加</h3>
			<table class="table">
				<%= form_with model: @genre, url: admin_genre_path, method: :patch, local: true do |f| %>
				<tr>
					<th><%= f.label :name, "ジャンル" %></th>
					<td><%= f.text_field :name %></td>
					<td><%= f.radio_button :effectiveness, "有効", checked: true %>有効</td>
					<td><%= f.radio_button :effectiveness, "無効" %>無効</td>
					<td><%= f.submit "変更を保存する", class: "btn btn-primary" %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>