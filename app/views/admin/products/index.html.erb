<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h3>商品一覧</h3>
			<%= link_to "＋", new_admin_product_path, class: "btn btn-default" %>
			<table class="table">
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
				<% @products.each do |product| %>
				<tr>
					<td><%= product.id %></td>
					<td><%= product.name %></td>
					<td><%= product.price %></td>
					<td><%= product.genre.name %></td>
					<td><%= product.sales_status %></td>
				</tr>
				<% end %>
			</table>	
		</div>
	</div>
</div>