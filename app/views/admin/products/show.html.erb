<h3>商品説明</h3>
<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= attachment_image_tag @product, :image, size: "200x200", fallback: "no_image.jpg" %>
		</div>
		<div class="col-xs-3">
			<table class="table">
				<tr>
					<td>商品名</td>
					<td><%= @product.name %></td>
				</tr>
				<tr>
					<td>商品説明</td>
					<td><%= @product.description %></td>
				</tr>
				<tr>
					<td>ジャンル</td>
					<td><%= @product.genre.name %></td>
				</tr>
				<tr>
					<td>税込価格（税抜価格）</td>
					<td><%= @product.price + 1.1 %>(<%= @product.price %>)　円</td>
				</tr>
				<tr>
					<td>販売ステータス</td>
					<td><%= @product.sales_status %></td>
				</tr>
			</table>
		</div>
	</div>
	<%= link_to "編集する", edit_admin_product_path(@product), class: "btn btn-primary" %>
</div>