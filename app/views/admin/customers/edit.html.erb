<div class="container">
	<div class="row">
		<div class="col-xs-6">
			<h3>山田花子さんの会員情報編集</h3>
			<table class="table">
				<%= form_with model: @customer, url: "/admin/customers/#{params[:id]}", method: :patch, local: true do |f| %>
				<tr>
					<th>会員ID</th>
					<td><%= @customer.id %></td>
				</tr>
				<tr>
					<th>氏名</th>
					<td><%= f.text_field :family_name_kanji %></td>
					<td><%= f.text_field :first_name_kanji %></td>
				</tr>
				<tr>
					<th>フリガナ</th>
					<td><%= f.text_field :family_name_kana %></td>
					<td><%= f.text_field :first_name_kana %></td>
				</tr>
				<tr>
					<th>郵便番号</th>
					<td><%= f.text_field :postcode %></td>
				</tr>
				<tr>
					<th>住所</th>
					<td><%= f.text_field :address %></td>
				</tr>
				<tr>
					<th>電話番号</th>
					<td><%= f.text_field :tel %></td>
				</tr>
				<tr>
					<th>メールアドレス</th>
					<td><%= f.text_field :email %></td>
				</tr>
				<tr>
					<th>会員ステータス</th>
					<td><%= f.radio_button :admission_status, "有効会員" %>有効</td>
					<td><%= f.radio_button :admission_status, "退会済み" %>退会済み</td>
				</tr>
			</table>
			<%= f.submit "変更を保存する", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>