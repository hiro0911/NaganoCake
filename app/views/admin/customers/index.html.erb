<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h3>会員一覧</h3>
			<table class="table">
				<tr>
					<th>会員ID</th>
					<th>氏名</th>
					<th>メールアドレス</th>
					<th>ステータス</th>
				</tr>
				<% @customers.each do |customer| %>
				<tr>
					<td><%= customer.id %></td>
					<td><%= link_to customer.full_name, admin_customer_path(customer) %></td>
					<td><%= customer.email %></td>
					<td><%= customer.admission_status %></td>
				</tr>
				<% end %>
			</table>	
		</div>
	</div>
</div>