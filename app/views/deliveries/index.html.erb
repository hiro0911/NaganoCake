<div class="container">
	<div class="row"> 
		<div class="col-xs-12">
			<h3>配送先登録/一覧</h3>
			<%= form_with model: @delivery, url: "/deliveries", method: :post, local: true do |f| %>
			<%= f.label :postcode, "郵便番号（ハイフンなし）" %>
			<%= f.text_field :postcode %><br>
			<%= f.label :address, "住所" %>
			<%= f.text_field :address %><br>
			<%= f.label :name, "宛名" %>
			<%= f.text_field :name %>
			<%= f.submit "登録する", class: "btn btn-success" %>
			<% end %>
		</div>
		<div class="col-xs-6">
			<table class="table">
				<tr>
					<th>郵便番号</th>
					<th>住所</th>
					<th>宛名</th>
					<th></th>
				</tr>
				<% @deliveries.each do |delivery| %>
				<tr>
					<td><%= delivery.postcode %></td>
					<td><%= delivery.address %></td>
					<td><%= delivery.name %></td>
					<td><%= link_to "編集する", edit_delivery_path(delivery), class: "btn btn-primary" %></td>
					<td><%= link_to "削除する", "/deliveries/#{delivery.id}", method: :delete, class: "btn btn-danger" %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>