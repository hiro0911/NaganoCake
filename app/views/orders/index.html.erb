<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h3>注文履歴一覧</h3>
			<table class="table">
				<tr>
					<th>注文日</th>
					<th>配送先</th>
					<th>注文書品</th>
					<th>支払金額</th>
					<th><ステータス</th>
					<th>注文詳細</th>
				</tr>
				<% @orders.each do |order| %>
				<tr>
					<td><%= order.created_at %></td>
					<td><%= order.full_address %></td>
					<td>
						<% OrderedProduct.where(order_id: order.id).each do |ordered_product| %>
						<%= ordered_product.product.name %>
					<% end %>
					</td>
					<td><%= order.billing_amount %></td>
					<td><%= order.order_status %></td>
					<td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>