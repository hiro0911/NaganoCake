<div class="container">
	<div class="row">
		<div class="col-xs-6">
			<table class="table">
				<h3>注文情報</h3>
				<tr>
					<th>注文日</th>
					<td><%= @order.created_at %></td>
				</tr>	
				<tr>
					<th>配送先</th>
					<td><%= @order.full_address %></td>
				</tr>
				<tr>
					<th>支払い方法</th>
					<td><%= @order.payment %></td>
				</tr>
				<tr>
					<th>ステータス</th>
					<td><%= @order.order_status %></td>
				</tr>
			</table>
		</div>
		<div class="col-xs-4">
			<table class="table">
				<h3>請求情報</h3>
				<tr>
					<th>商品合計</th>
					<td><%= @order.billing_amount %></td>
				</tr>
				<tr>
					<th>配送料</th>
					<td><%= @order.postage %></td>
				</tr>
				<tr>
					<th>ご請求額</th>
					<td><%= @order.billing_amount + @order.postage %></td>
				</tr>
			</table>
		</div>
		<div class="col-xs-8">
			<table class="table">
				<tr>
					<th>商品</th>
					<th>単価（税込）</th>
					<th>個数</th>
					<th>小計</th>
				</tr>
				<% @ordered_products.each do |ordered_product| %>
				<tr>
					<td><%= ordered_product.product.name %></td>
					<td><%= ordered_product.product.price %></td>
					<td><%= ordered_product.count %></td>
					<td><%= ordered_product.price %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>