<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<table class="table">
				<thead>
					<tr>
						<th>ジャンル検索</th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
					<tr>
						<td><%= link_to genre.name, "/genre/products/#{genre.id}" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>	
			<div class="col-xs-9">
				<table class="table">
					<% if params[:genre_id] %>
						<h3><%= @genre.name %>一覧</h3>
					<% else %>					
						<h3>商品一覧</h3>
					<% end %>
					<% @products.each do |product| %>
					<tr>
						<td>
							<%= link_to product_path(product) do %>
							<%= attachment_image_tag product, :image, size: "200x100", fallback: "no_image.jpg" %>
							<%= product.name %>
							<%= product.price %>
							<% end %>
						</td>
					</tr>
					<% end %>
				</table>
			</div>	
		</div>
	</div>
</div>