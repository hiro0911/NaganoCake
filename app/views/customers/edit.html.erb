<div class="container">
	<div class="row">
		<div class="col-xs-8">
			<h3>登録情報</h3>
			<table class="table">
				<%= form_with model:@customer, url: "/customers/#{@customer.id}", method: :patch, local: true do |f| %>
				<tr>
					<th>名前</th>
					<td>（姓）<%= f.text_field :family_name_kanji %></td>
					<td>（名）<%= f.text_field :first_name_kanji %></td>
				</tr>
				<tr>
					<th>フリガナ</th>
					<td>（セイ）<%= f.text_field :family_name_kana %></td>
					<td>（メイ）<%= f.text_field :first_name_kana %></td>
				</tr>
				<tr>
					<th>メールアドレス</th>
					<td><%= f.text_field :email %></td>
				</tr>
				<tr>
					<th>郵便番号（ハイフンなし）</th>
					<td><%= f.text_field :postcode %></td>
				</tr>
				<tr>
					<th>住所</th>
					<td><%= f.text_field :address %></td>
				</tr>
				<tr>
					<th>電話番号（ハイフンなし）</th>
					<td><%= f.text_field :tel %></td>
				</tr>
				<tr>
					<td><%= f.submit "編集内容を保存する", class: "btn btn-primary" %></td>
				</tr>
				<% end %>
			</table>
			<%= link_to "退会する", withdrow_customer_path(@customer), class: "btn btn-danger" %>
		</div>
	</div>
</div>		