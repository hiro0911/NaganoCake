<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>新規会員登録</h2>
      <table class="table">
        <tr>
          <th>名前</th>
          <td>（姓）<%= f.text_field :family_name_kanji %></td>
          <td>（名）<%= f.text_field :first_name_kanji %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td>（セイ）<%= f.text_field :family_name_kana %></td>
          <td>（メイ）<%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th>郵便番号（ハイフンなし）</th>
          <td><%= f.text_field :postcode %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th>電話番号（ハイフンなし）</th>
          <td><%= f.text_field :tel %></td>
        </tr>
        <tr>
          <th>パスワード（６文字以上）</th>
          <td><%= f.text_field :password %></td>
        </tr>
        <tr>
          <th>パスワード（確認用）</th>
          <td><%= f.text_field :password_confirmation %></td>
        </tr>
      </table>
      <%= f.submit "新規登録", class: "btn btn-success" %>
      <% end %>
    </div>
    <div class="col-xs-5">
      <h3>既に登録済みの方</h3>
      <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
    </div>
  </div>
</div>  

<%= render "customers/shared/links" %>
