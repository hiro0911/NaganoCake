<div class="container">
	<div class="row">
		<div class="col-xs-6">
			<h3>マイページ</h3>
			<span>登録情報</span>
			<%= link_to "編集する", edit_customer_path, class: "btn btn-primary" %>
			<%= link_to "パスワードを変更する", "#", class: "btn btn-primary" %>
			<table class="table">
				<tr>
					<th>氏名</th>
					<td><%= @customer.full_name %></td>
				</tr>
				<tr>
					<th>カナ</th>
					<td><%= @customer.full_name_kana %></td>
				</tr>
				<tr>
					<th>郵便番号</th>
					<td><%= @customer.postcode %></td>
				</tr>
				<tr>
					<th>住所</th>
					<td><%= @customer.address %></td>
				</tr>
				<tr>
					<th>電話番号</th>
					<td><%= @customer.tel %></td>
				</tr>
				<tr>
					<th>メールアドレス</th>
					<td><%= @customer.email %></td>
				</tr>
			</table>
			<table class="table">
				<tr>
					<th>配送先</th>
					<td><%= link_to "一覧を見る", deliveries_path, class: "btn btn-primary" %></td>
				</tr>
				<tr>
					<th>注文履歴</th>
					<td><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></td>
				</tr>
			</table>
		</div>
	</div>
</div>