<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <table class="table">
        <tr>
          <td><h3>会員の方はこちらからログイン</h3></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th>パスワード</th>
          <td><%= f.text_field :password %></td>
        </tr>
        <tr>
          <td><%= link_to "=>パスワードを忘れた方はこちら", edit_customer_password_path %></td>
        <tr>
          <td><%= f.submit "ログイン", class: "btn btn-primary" %></td>
        </tr>
        <tr>
          <td><h3>登録がお済みでない方</h3></td>
        </tr>
        <tr>
          <td><%= link_to "こちら", new_customer_registration_path %>　から新規登録を行ってください。<td>
        </tr>
      </table>
    </div>
  </div>
</div>
<% end %>

